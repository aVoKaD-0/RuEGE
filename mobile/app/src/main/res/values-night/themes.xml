    <!-- Стиль для TabLayout -->
    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/tab_text_unselected</item>
        <item name="tabSelectedTextColor">@color/tab_text_selected</item>
        <item name="tabIndicator">@null</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabBackground">@color/tab_background</item>
        <item name="tabGravity">center</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabPaddingTop">8dp</item>
        <item name="tabPaddingBottom">8dp</item>
        <item name="tabUnboundedRipple">false</item>
    </style>
