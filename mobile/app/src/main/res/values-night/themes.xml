<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Mobile" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Цвета текста для темной темы -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Цвета фона для темной темы -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        
        <!-- Материальный фон для темной темы -->
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="materialCardViewStyle">@style/CardViewStyleDark</item>
    </style>
    
    <!-- Стили для карточек в темной теме -->
    <style name="CardViewStyleDark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#222222</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

