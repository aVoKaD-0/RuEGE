<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Mobile" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Цвета текста для светлой темы -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Цвета фона для светлой темы -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    
    <style name="Theme.Mobile" parent="Base.Theme.Mobile">
        <!-- Следуем системной теме по умолчанию -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
    </style>
    
    <!-- Стили для карточек -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Стили для заголовков -->
    <style name="TextHeadline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextSubheader" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Стиль для текста вкладок -->
    <style name="TabTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Стиль для TabLayout -->
    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/tab_text_unselected</item>
        <item name="tabSelectedTextColor">@color/tab_text_selected</item>
        <item name="tabIndicator">@null</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabBackground">@color/tab_background</item>
        <item name="tabGravity">center</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabPaddingTop">8dp</item>
        <item name="tabPaddingBottom">8dp</item>
        <item name="tabUnboundedRipple">false</item>
    </style>
    
    <!-- Стиль для AppBar -->
    <style name="Theme.Mobile.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Стиль для всплывающих меню (например, для Toolbar) -->
    <style name="Theme.Mobile.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>